<div id="panel">
  <button {{action (perform createPost)}}>
    Create New Post
  </button>

  Created {{createPost.performCount}} additional posts

  <hr>

  <label>
    <input
      type="checkbox"
      oninput={{action
        (mut performAdditionalBroadcast (not performAdditionalBroadcast))
      }}
      value={{performAdditionalBroadcast}}
    >
    Call <code>queryManager.broadCastQueries()</code> an additional time?
  </label>
</div>

<div id="columns">
  <div class="column">
    <h1>Posts from <code>watchQuery</code></h1>

    {{#each model as |post|}}
      <h2 style={{html-safe (concat "background-color: #" (color-from-value post.id))}}>
        {{post.id}}
      </h2>
      
      {{post.content}}
    {{/each}}
  </div>
  <div class="column">
    <h1>Posts created locally</h1>

    {{#each createdPosts as |post|}}
      <h2 style={{html-safe (concat "background-color: #" (color-from-value post.id))}}>
        {{post.id}}
      </h2>
      
      {{post.content}}
    {{/each}}
  </div>
</div>